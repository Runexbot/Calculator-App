<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="25dp"
    android:gravity="center">
    
    <LinearLayout
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/outline">

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/display"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/opbc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="("
            style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/clbc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=")"
            style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
        android:id="@+id/pcntg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="%"
        style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="AC"
        style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/firstrow">

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/slash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/secrow">

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/mutiple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/thirdrow">

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/fourthrow">

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            style="@style/DefaultButtonStyle.NumberButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            style="@style/DefaultButtonStyle.OperatorButton"/>

        <Space
            android:layout_width="9dp"
            android:layout_height="match_parent"/>
    </LinearLayout>










</RelativeLayout>